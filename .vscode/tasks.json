{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build buildfiles",
            "type": "shell",
            "command": "vendor/premake/premake5",
            "args": [
                "gmake"
            ],

            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },
        {
            "label": "Build-Debug",
            "type": "shell",

            "command": "make",

            "presentation": {
                "echo": false,
                "reveal": "never",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },

        {
            "label": "Build-Release",
            "type": "shell",

            "command": "make",

            "args": [
                "config=release_x86_64"
            ],

            "presentation": {
                "echo": false,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": false
            }
        },

        {
            "label": "Build & Run ( Debug )",
            "type": "shell",
            "command": "./bin/Debug-linux-x86_64/Application/Application",

            "dependsOn" :[
                "Build-Debug"
            ],

            "presentation": {
                "echo": false,
                //"reveal": "silent",
                "focus": false,
                "panel": "shared",
                //"showReuseMessage": false,
                "clear": false
            }
        },

        {
            "label": "Build & Run ( Release )",
            "type": "shell",
            "command": "./bin/Release-linux-x86_64/Application/Application",

            "dependsOn" :[
                "Build-Release"
            ],

            "presentation": {
                "echo": false,
                //"reveal": "never",
                "focus": false,
                "panel": "shared",
                //"showReuseMessage": false,
                "clear": false
            }
        },

        {
            "label": "Run (Release)",
            "type":"shell",
            "command": "./bin/Release-linux-x86_64/Application/Application",

            "presentation": {
                "focus": false,
                "panel": "shared",
                //"showReuseMessage": false,
            }
        },

        {
            "label": "Run (Debug)",
            "type":"shell",
            "command": "./bin/Debug-linux-x86_64/Application/Application",

            "presentation": {
                "focus": false,
                "panel": "shared",
                //"showReuseMessage": false,
            }
        }
    ]
}